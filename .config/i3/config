# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        set $push 5

        bindsym j resize shrink width $push px or $push ppt
        bindsym k resize grow height $push px or $push ppt
        bindsym l resize shrink height $push px or $push ppt
        bindsym semicolon resize grow width $push px or $push ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width $push px or $push ppt
        bindsym Down resize grow height $push px or $push ppt
        bindsym Up resize shrink height $push px or $push ppt
        bindsym Right resize grow width $push px or $push ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

set $bg-color 	         #16191e
set $inactive-bg-color   #2f343f
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-color        #E53935
set $indicator-color     #2f343f
set $transparent         #00000000

# window colors
#                       border              background         text                 indicator
client.focused          $indicator-color    $indicator-color   $text-color          $indicator-color
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color $bg-color
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color $bg-color
client.urgent           $urgent-color       $urgent-color      $text-color          $bg-color

bar {
	status_command i3blocks -c /home/aewens/.config/i3/i3blocks.conf
    i3bar_command i3bar -t
    position top
	colors {
		background $transparent
		separator #757575
		#                  border             background         text
		focused_workspace  $transparent       $transparent       $text-color
		inactive_workspace $transparent       $transparent       $inactive-text-color
		urgent_workspace   $transparent       $transparent       $urgent-color
	}
}

# Setting volume keys
bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume $(pactl list short sinks | cut -f1) +5%
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume $(pactl list short sinks | cut -f1) -5%
bindsym Shift+XF86AudioMute exec --no-startup-id pactl set-sink-mute $(pactl list short sinks | cut -f1) toggle

bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+1 i3blocks 
bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 5%- && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec amixer -q -D pulse sset Master toggle && pkill -RTMIN+1

# Setting multimedia keys
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

